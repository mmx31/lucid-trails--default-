.dijitRtl .dijit .dijitTab {
	margin-right:auto;
	margin-left:4px;		/* space between one tab and the next in top/bottom mode */
	-moz-box-orient:horizontal;
	text-align: right;
}

/* tab strips */
.dijitRtl .dijit .dijitTabContainerTopStrip,
.dijitRtl .dijit .dijitTabContainerBottomStrip {
	padding-right: 3px;
	padding-left: 0px;
}

.dijitRtl .dijit .dijitTabInnerDiv {
	padding:6px 9px 5px 8px;
}

.dijitRtl .dijit .dijitTabPaneWrapper {
	#zoom: 1;
}

.dj_ie-rtl .dijit .dijitTabContainerLeft-tabs {
	margin-left: 1px !important;
}

.dj_ie-rtl .dijit .dijitTabContainerRight-tabs {
	margin-right: 1px !important;
}

.dijitRtl .dijit .dijitTabContainerLeft-tabs .dijitTab,
.dijitRtl .dijit .dijitTabContainerRight-tabs .dijitTab {
	margin-left:0px;
}

.dj_ie .dijit .dijitTab .dijitTabInnerDiv{
	width : 1%;
}