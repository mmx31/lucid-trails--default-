.dijit .dijitToolbar {
	border-bottom: 1px solid #ccc;
	background:#eaeaea url("images/titleBar.png") repeat-x top left;
}

/* setting a min-height on ditor toolbar */
.dj_ie6 .dijit .dijitToolbar {
	height: 10px;
}

.dijit .dijitToolbar .dijitButtonNode,
.dijit .dijitToolbar .dijitComboButton .dijitButtonContents,
.dijit .dijitToolbar .dijitComboButton .dijitDownArrowButton {
	background: none;
	margin: 0px;
	padding: 0px;
	border: none;
	font-size: 12px;
}

.dijit .dijitToolbar .dijitButton,
.dijit .dijitToolbar .dijitToggleButton,
.dijit .dijitToolbar .dijitDropDownButton,
.dijit .dijitToolbar .dijitComboButton .dijitButtonContents,
.dijit .dijitToolbar .dijitComboButton .dijitDownArrowButton  {
	background: none;
	padding: 1px;
}

.dijit .dijitToolbar .dijitButtonChecked,
.dijit .dijitToolbar .dijitToggleButtonChecked {
	background-color:#d4dff2;
	border:1px solid #316ac5;
	padding: 0px;	/* reduce padding to compensate for space taken by border */
}

.dijit .dijitToolbar .dijitButtonCheckedHover,
.dijit .dijitToolbar .dijitToggleButtonCheckedHover
 {
	background-color:#abc1e5;
	border:1px solid #316ac5;
	padding: 0px;	/* reduce padding to compensate for space taken by border */
}

.dijit .dijitToolbar .dijitButtonHover,
.dijit .dijitToolbar .dijitToggleButtonHover,
.dijit .dijitToolbar .dijitDropDownButtonHover,
.dijit .dijitToolbar .dijitComboButtonHover .dijitButtonContents,
.dijit .dijitToolbar .dijitComboButtonDownArrowHover .dijitDownArrowButton {
	/* TODO: change this from Hover to Selected so that button is still highlighted while drop down is being used */
	border: 1px solid #869cbf;
	padding: 0px;	/* reduce padding to compensate for space taken by border */
	background-color:#e1e5f0;
}

.dijit .dijitToolbar label {	
	padding: 3px 3px 0 6px;
}

.dj_ie .dijit .dijitToolbar .dijitComboButton .dijitButtonContentsFocused,
.dj_ie .dijit .dijitToolbar .dijitComboButton .dijitDownArrowButtonFocused,
.dj_ff2 .dijit .dijitToolbar .dijitComboButton .dijitButtonContentsFocused,
.dj_ff2 .dijit .dijitToolbar .dijitComboButton .dijitDownArrowButtonFocused {
	/* focus border doesn't appear on <td> for FF2 or IE, so need to add it manually */
	border: 1px #555 dotted !important;
	padding: 0px;	
}
