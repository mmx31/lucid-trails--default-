.dijit .dijitMenu {
	border: 1px solid #7eabcd;
	margin: 0px;
	padding: 0px;
}

.dijit .dijitMenuItem {
	background-color: #f7f7f7;
	font-family: sans-serif;
	margin: 0;
}
.dijit .dijitMenuPreviousButton, .dijit .dijitMenuNextButton {
	font-style: italic;
}
.dijit .dijitMenuItem td {
	padding:2px;
}

.dijit .dijitMenuItemHover {
	background-color: #3559ac;
	color:#fff;
}

.dijit .dijitMenuItemIcon {
	width: 16px;
	height: 16px;
}

.dijit .dijitMenuExpand {
	width: 7px;
	height: 7px;
	background-image: url('images/spriteArrows.png');
	background-repeat: no-repeat;
	background-position: -14px 0px;
	font-size: 1px;
	display: block;
}
.dj_ie6 .dijit .dijitMenuExpand {
	background-image: url('images/spriteArrows.gif');
}

.dijit .dijitMenuSeparator {
	background-color: #f7f7f7;
}

/* separator can be two pixels -- set border of either one to 0px to have only one */
.dijit .dijitMenuSeparatorTop {
	border-bottom: 1px solid #9b9b9b;
}

.dijit .dijitMenuSeparatorBottom {
	border-top: 1px solid #e8e8e8;
}

/* the checked menu item */
.dijit .dijitCheckedMenuItemIconChar {
	display: none;
}

.dijit .dijitCheckedMenuItemIcon {
	background-image: url('images/checkmark.png');
	background-position: -16px;
}

.dj_ie6 .dijit .dijitCheckedMenuItemIcon {
	background-image: url('images/checkmark.gif');
}

.dijit .dijitCheckedMenuItemIconChecked {
	background-position: 0px;
}

.dijit .dijitMenuItemHover .dijitCheckedMenuItemIcon {
	background-position: -80px;
}

.dijit .dijitMenuItemHover .dijitCheckedMenuItemIconChecked {
	background-position: -64px;
}