/**** Disabled cursor *****/
.dijit .dijitSliderDisabled *,
.dijit .dijitDisabledClickableRegion,	/* a region the user would be able to click on, but it's disabled */
.dijit .dijitSpinnerDisabled *,
.dijit .dijitButtonDisabled *,
.dijit .dijitDropDownButtonDisabled *,
.dijit .dijitComboButtonDisabled *,
.dijit .dijitComboBoxDisabled *
{
	cursor: not-allowed !important;
}

/* DnD avatar-specific settings */
/* For now it uses a default set of rules. Some other DnD classes can be modified as well. */
.dijit .dojoDndItemBefore {
	border-top: 2px solid #369;
}

.dijit .dojoDndItemAfter {
	border-bottom: 2px solid #369;
}

.dijit .dojoDndItemOver {
	cursor:pointer;
}

.dijit table.dojoDndAvatar { -moz-border-radius: 0; border: 1px solid #ccc; border-collapse: collapse; background-color: #fff; font-size: 75%; color: black;}
.dijit .dojoDndAvatar td	{ border: none; }
.dijit .dojoDndAvatar tr	{ border: none; }
.dijit .dojoDndAvatarHeader td	{ height: 20px; padding: 0 0 0 21px; }
.dijit .dojoDndAvatarItem td { padding: 2px;}
.tundra.dojoDndMove .dojoDndAvatarHeader	{background-color: #f58383; background-image: url(images/dndNoMove.png); background-repeat: no-repeat; background-position: 2px center;}
.tundra.dojoDndCopy .dojoDndAvatarHeader	{background-color: #f58383; background-image: url(images/dndNoCopy.png); background-repeat: no-repeat; background-position: 2px center;}
.tundra.dojoDndMove .dojoDndAvatarCanDrop .dojoDndAvatarHeader	{background-color: #97e68d; background-image: url(images/dndMove.png); background-repeat: no-repeat; background-position: 2px center;}
.tundra.dojoDndCopy .dojoDndAvatarCanDrop .dojoDndAvatarHeader	{background-color: #97e68d; background-image: url(images/dndCopy.png); background-repeat: no-repeat; background-position: 2px center;}

.dijit .dijitContentPaneLoading {
	background:url('images/loading.gif') no-repeat left center;
	padding-left:25px;
}

.dijit .dijitContentPaneError {
	background:url('images/warning.png') no-repeat left center;
	padding-left:25px;
}
